<h3><div id="fullName" align="center"></div></h3>

Lives in: <%= link_to @tenant.property.fulladdress, landlord_property_path %> 

<!-- getting json from tenant #show method and creating an object with the json and concatenating their first name and last name by using a method on the prototype  -->
<script type="text/javascript" charset="utf-8">


	function Tenant(rawJson) {
		this.firstName = rawJson.firstname
		this.lastName = rawJson.lastname 
	};

	Tenant.prototype.name = function() {
		return this.firstName + " " + this.lastName;
	};

	let request = $.getJSON('http://localhost:3000/landlords/<%= "#{params['landlord_id']}" %>/properties/<%= "#{params['property_id']}" %>/tenants/<%= "#{params['id']}" %>.json', function(data) {
		let tenant = new Tenant(data);
		$("#fullName").text('Showing details for ' + tenant.name());
	});

</script>